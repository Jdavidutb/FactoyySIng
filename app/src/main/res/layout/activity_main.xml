<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Clase.MainActivity">

    <Button
        android:text="Profesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Profesor"
        android:layout_below="@+id/Nombre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <Button
        android:text="Estudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Estudiante"
        android:layout_alignBaseline="@+id/Profesor"
        android:layout_alignBottom="@+id/Profesor"
        android:layout_alignEnd="@+id/Nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none|textEmailAddress"
        android:ems="10"
        android:id="@+id/Nombre"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Administr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Administrativo"
        android:layout_alignBaseline="@+id/Estudiante"
        android:layout_alignBottom="@+id/Estudiante"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Usuarios"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Profesor" >

    </ListView>


</RelativeLayout>
